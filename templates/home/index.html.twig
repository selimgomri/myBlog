{% extends 'base.html.twig' %}

{% block title %}Home Blog!
{% endblock %}

{% block body %}


	<h1>Welcome to my blog âœ…</h1>
	<div class="flex">
		{% for article in pagination %}
			<div class="card " style="width: 18rem;">
				<img class="card-img-top" src=" {{article.cover}} " alt="Card image cap" style="width: 17rem">
				<div class="card-body">
					<h5 class="card-title">
						{{ article.title }}
					</h5>
					<p class="card-text">
						{{ article.content }}
					</p>
					<a href="#" class="btn btn-primary">Go somewhere</a>
				</div>
			</div>
		{% else %}
			No article found
		{% endfor %}
	</div>
	{{ knp_pagination_render(pagination) }}


{% endblock %}
